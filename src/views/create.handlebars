  <div class="d-flex justify-content-between align-items-center p-4">

         <h1>Agregar Producto</h1>
</div>
    <div class="row d-flex justify-content-center p-4">
         <div class="col-6 border border-primary-subtle border-3 rounded ">
      <form id="AddProductForm" action="/create"  method="POST">
   <div class="row pt-2 ">
         <div class="col mb-3">
            <label for="title" class="form-label">Producto</label>
            <input type="text" name="title"  class="form-control" id="title" placeholder="ingrese el nombre." >
         </div>
         
         <div class="col-3 mb-3">
            <label for="code" class="form-label">Código</label>
            <input type="text" name="code"  class="form-control" id="code" placeholder="ingrese el código" >
         </div>
      </div>  
      <div class="row">
            <div class="col mb-3">
            <label for="title" class="form-label">Descripción</label>
            <input type="text" name="description"  class="form-control" id="description" placeholder="ingrese descripción"  >
         </div>
      </div>   
      <div class="row">
         <div class="col-9 mb-3">
            <label for="category" class="form-label">Categoría</label>
            <input type="text" name="category"  class="form-control" id="category" placeholder="ingrese categoría" >
         </div>
         <div class="col-3 mb-3">
            <label for="stock" class="form-label">Stock</label>
            <input type="number" name="stock"  class="form-control" id="stock" placeholder="ingrese stock" >
         </div>
         </div> 
         <div class="row">
            <div class="col mb-3">
            <label for="img" class="form-label">Imagen</label>
            <input type="text" name="img"  class="form-control" id="img" placeholder="ingrese dir img" >
         </div>
         </div>
         <div class="col-2 mb-3">
            <label for="price" class="form-label">Precio</label>
            <input type="number" name="price"  class="form-control" id="price" placeholder="ingrese el precio del producto" >
         </div>
      <div class="row">
         <div class="col mb-3">
         <button type="submit" class="btn btn-primary">Cargar</button>
      </div>
   </div>
   </form>
   </div>
</div>
